{
  "monitors": [
    {
      "name": "Bali Report - Main Site",
      "url": "https://bali.report",
      "type": "http",
      "method": "GET",
      "interval": 60,
      "retryInterval": 30,
      "maxretries": 3,
      "upsideDown": false,
      "ignoreSSL": false,
      "accepted_statuscodes": [200],
      "keywords": ["Bali Report", "Multi-polar News"],
      "pushToken": "",
      "tags": ["production", "frontend"]
    },
    {
      "name": "Bali Report - API Health",
      "url": "https://bali.report/api/health",
      "type": "http",
      "method": "GET",
      "interval": 30,
      "retryInterval": 15,
      "maxretries": 3,
      "upsideDown": false,
      "ignoreSSL": false,
      "accepted_statuscodes": [200],
      "keywords": ["status", "healthy"],
      "pushToken": "",
      "tags": ["production", "backend"]
    },
    {
      "name": "Bali Report - RSS Fetcher",
      "url": "https://bali.report/api/health",
      "type": "http",
      "method": "GET",
      "interval": 300,
      "retryInterval": 60,
      "maxretries": 3,
      "upsideDown": false,
      "ignoreSSL": false,
      "accepted_statuscodes": [200],
      "keywords": ["rss", "success"],
      "pushToken": "",
      "tags": ["production", "rss"]
    },
    {
      "name": "SSL Certificate",
      "url": "https://bali.report",
      "type": "http",
      "method": "GET",
      "interval": 43200,
      "retryInterval": 300,
      "maxretries": 3,
      "upsideDown": false,
      "ignoreSSL": false,
      "certificate": {
        "enabled": true,
        "alertDays": 30
      },
      "tags": ["production", "security"]
    }
  ],
  "notifications": [
    {
      "type": "discord",
      "webhookUrl": "{{DISCORD_WEBHOOK_URL}}",
      "name": "Discord Notifications",
      "enabled": false
    },
    {
      "type": "email",
      "smtpHost": "smtp.gmail.com",
      "smtpPort": 587,
      "smtpTls": true,
      "smtpUsername": "{{SMTP_USERNAME}}",
      "smtpPassword": "{{SMTP_PASSWORD}}",
      "from": "monitoring@bali.report",
      "to": "your-email@example.com",
      "name": "Email Notifications",
      "enabled": false
    }
  ],
  "settings": {
    "serverName": "Bali Report Production",
    "timezone": "Asia/Singapore",
    "pageSize": 10,
    "checkCertificates": true,
    "debug": false
  }
}